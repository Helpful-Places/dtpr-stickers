{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "places": {
      "$placeId": {
        ".read": true,
        ".write": "!data.exists() || data.child('admins').child(auth.uid).exists()",
        ".indexOn": [
          "sensors",
          "name"
        ]
      }
    },
    "sensors": {
      "$sensorId": {
        ".read": true,
        ".write": "!data.exists() || root.child('places/'+ newData.child('placeID').val()).child('admins').child(auth.uid).exists()",
      }
    }
  }
}